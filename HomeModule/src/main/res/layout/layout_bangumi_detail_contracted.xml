<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:layout_margin="@dimen/dp_10"
        app:cardBackgroundColor="@color/card_view_background"
        app:cardCornerRadius="@dimen/dp_2"
        app:cardElevation="@dimen/dp_0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_pay_bangumi_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/ic_pay_bangumi_tips"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_toEndOf="@+id/iv_pay_bangumi_tips"
                android:paddingTop="@dimen/dp_5"
                android:text="请承包我吧"
                android:textColor="@color/yellow_30"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toEndOf="@id/iv_pay_bangumi_tips"
                app:layout_constraintTop_toTopOf="@+id/iv_pay_bangumi_tips"
                android:layout_toRightOf="@+id/iv_pay_bangumi_tips" />

            <TextView
                android:id="@+id/tv_pay_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pay"
                android:layout_toEndOf="@+id/iv_pay_bangumi_tips"
                android:text="已有10086人承包了这部番"
                android:textColor="@color/yellow_30"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toEndOf="@id/iv_pay_bangumi_tips"
                app:layout_constraintTop_toBottomOf="@+id/tv_pay"
                android:layout_toRightOf="@+id/iv_pay_bangumi_tips" />

            <TextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/shape_bangumi_index_yellow_bg"
                android:gravity="center"
                android:text="承包"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="@dimen/dp_10" />

            <View
                android:id="@id/v_hor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/iv_pay_bangumi_tips"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/line_bg"
                app:layout_constraintTop_toBottomOf="@+id/iv_pay_bangumi_tips"/>

            <com.jiangxufa.baselibrary.widgets.CircleImageView
                android:id="@+id/iv_avatar1"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:src="@mipmap/bili_default_avatar"
                app:border_color="@color/white"
                app:border_width="@dimen/dp_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_hor"/>

            <com.jiangxufa.baselibrary.widgets.CircleImageView
                android:id="@+id/iv_avatar2"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_12"
                android:src="@mipmap/bili_default_avatar"
                app:border_color="@color/white"
                app:border_width="@dimen/dp_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_hor"/>

            <com.jiangxufa.baselibrary.widgets.CircleImageView
                android:id="@+id/iv_avatar3"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_34"
                android:layout_marginTop="@dimen/dp_12"
                android:src="@mipmap/bili_default_avatar"
                app:border_color="@color/white"
                app:border_width="@dimen/dp_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_hor"/>

            <com.jiangxufa.baselibrary.widgets.CircleImageView
                android:id="@+id/iv_avatar4"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_46"
                android:layout_marginTop="@dimen/dp_12"
                android:src="@mipmap/bili_default_avatar"
                app:border_color="@color/white"
                app:border_width="@dimen/dp_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_hor"/>

            <TextView
                android:id="@+id/tv_week_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="等34人七日内承包了这部番"
                android:textColor="@color/black_alpha_45"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_avatar4"
                app:layout_constraintTop_toBottomOf="@id/v_hor"/>

            <TextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_25"
                android:layout_margin="@dimen/dp_10"
                android:gravity="center"
                android:text="查看榜单"
                android:textColor="@color/yellow_30"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>